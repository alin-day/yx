<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/resetPhonePwdLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/resetPhonePwdInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yx_bg_edit"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="手机号："
                android:textColor="@color/yx_text_color_change"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/yx_reset_phone_pwd_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入帐号"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="@color/s_light_gray"
                android:textColorHint="@color/s_light_gray"
                android:textSize="18.0sp">

                <requestFocus />
            </EditText>


            <Button
                android:id="@+id/yx_reset_phone_pwd_getVerifyCode_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/yx_bg_get_verify_code"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="获取验证码"
                android:textColor="@color/yx_text_color_change"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1.0"
            android:background="@drawable/yx_bg_edit"
            android:gravity="center_vertical"
            android:padding="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="验证码："
                android:textColor="@color/yx_text_color_change"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/yx_reset_phone_pwd_edit_verifyCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/fg_account_verifyCode_hint"
                android:inputType="number"
                android:maxLength="10"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/s_light_gray"
                android:textColorHint="@color/s_light_gray"
                android:textSize="18.0sp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/yx_reset_phone_pwd_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/resetPhonePwdInfo"
        android:layout_marginTop="10dp"
        android:background="@drawable/yx_btn_blue"
        android:text="提交"
        android:textColor="@color/s_white"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/yx_reset_phone_pwd_tips_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yx_reset_phone_pwd_submit_btn"
        android:layout_margin="5dp"
        android:text="温馨提示"
        android:textColor="#898a91"
        android:textSize="21sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/yx_reset_phone_pwd_tips_title"
        android:text="1.绑定手机号码便于找回您的密码"
        android:textColor="#b0b0b0"
        android:textSize="16sp" />

</RelativeLayout>