<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/yx_m_layout_notice_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/yx_m_bg_notice_title">


        <ImageView
            android:id="@+id/yx_m_img_notice_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/yx_m_icon_close" />

        <TextView
            android:id="@+id/yx_m_text_notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="21sp" />

    </RelativeLayout>

    <com.sqwan.msdk.views.ProgressWebView
        android:id="@+id/yx_m_webview_notice"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/yx_m_layout_notice_title" />

</RelativeLayout>
