<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                    android:startColor="#FFB4B4B4"
                    android:endColor="#FFB4B4B4"
                    android:angle="270"
            />
        </shape>
    </item>
        
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                        android:startColor="#FFF27341"
                        android:endColor="#FFF27341"
                        android:angle="270"
                />
            </shape>
        </clip>
    </item>
    
</layer-list>

